<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/text_title_dialog"
            style="@style/textTitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/DIALOG_TITULO_RESTABLECE_PASSWORD"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_below="@+id/title"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp">

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/icon_password"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            app:iiv_color="@color/primary"
            app:iiv_icon="gmd-email"
            android:padding="12dp"
            android:scaleType="centerInside"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/dialog_edit_text_recover_email"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/icon_password"
            android:layout_toRightOf="@id/icon_password"
            android:hint="@string/HINT_EMAIL"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/primary"
            android:textColorHint="@color/secondary_text"
            android:textSize="16sp"

            app:met_accentTypeface="fonts/RobotoCondensed-Bold.ttf"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primary"
            app:met_typeface="fonts/RobotoCondensed-Regular.ttf"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/content"
        android:id="@+id/actions"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/button_dialog_confirm"
            style="@style/buttonsDialog"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/BUTTON_RESTABLECER"
            android:layout_marginRight="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:minWidth="64dp"/>

        <TextView
            android:id="@+id/button_dialog_cancel"
            style="@style/buttonsDialog"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_toLeftOf="@id/button_dialog_confirm"
            android:gravity="center"
            android:text="@string/BUTTON_CANCELAR"
            android:layout_marginRight="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:minWidth="64dp"/>

    </RelativeLayout>



</RelativeLayout>